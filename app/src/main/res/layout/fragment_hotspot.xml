<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:keepScreenOn="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/HotSpotButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/button"
            android:text="Turn ON Hotspot"
            android:onClick="installApps"
            android:textAllCaps="false"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/hotspotdetails"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/HotSpotButton"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/ipdetails"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/hotspotdetails"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/logouttext"
            android:text="Sign out "
            android:textSize="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/logoutButton"
            android:layout_alignParentBottom="true"/>


        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/logout"
            android:id="@+id/logoutButton"
            android:onClick="onLogoutButton"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


        </RelativeLayout>
</RelativeLayout>
