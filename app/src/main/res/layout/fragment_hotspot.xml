<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/hotspotdetails"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="HotSpot: "
            android:layout_above="@+id/ipdetails"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/ipdetails"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="IP Address: "
            android:layout_above="@+id/HotSpotButton"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/HotSpotButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/darkgreen"
            android:text="Turn ON Hotspot"
            android:onClick="installApps"
            android:textAllCaps="false"
            android:layout_weight="0.0"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
</RelativeLayout>
